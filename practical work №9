#include <stdio.h>
#include <windows.h>
#include <math.h>

// Функція для обчислення мінімальної кількості кроків
int minimumSteps(int x, int y) {
    int diff = y - x; // Обчислюємо різницю між цільовим значенням y та поточним значенням x
    if (diff <= 2)
        return diff; // Якщо різниця менша або дорівнює 2, повертаємо різницю, оскільки це найбільш ефективний спосіб
    int steps = 0; // Лічильник кроків
    int k = 1; // Кількість кроків, яку можна зробити на кожному кроці
    while (diff > 0) {
        diff -= k; // Зменшуємо різницю на кількість кроків, які можна зробити на поточному кроці
        steps++; // Збільшуємо лічильник кроків
        if (steps % 2 == 0)
            k++; // Якщо кількість кроків парна, збільшуємо кількість кроків, яку можна зробити на наступному кроці
    }
    return steps; // Повертаємо кількість кроків
}

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int x, y;
    printf("Введіть значення x: ");
    scanf("%d", &x);
    printf("Введіть значення y: ");
    scanf("%d", &y);
    int result = minimumSteps(x, y);
    printf("Мінімальна кількість кроків: %d\n", result);    
    printf("\n\n Практичне завдання №9*\n Виконав студент НУБІП групи ІПЗ-22009б \n Вітківський Максим Сергійович\n\n");

}
