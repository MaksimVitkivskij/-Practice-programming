#include <stdio.h>
#include <windows.h>
#include <stdlib.h>

int main()
{
    float t1, t2, t3, time;

    // Налаштування кодування консолі для відображення українських символів
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    // Ввід часу, за який з'їдає пиріг кожен гість
    printf("Введіть час, за який з'їдає пиріг перший гість\n");
    scanf("%f", &t1);

    printf("Введіть час, за який з'їдає пиріг другий гість\n");
    scanf("%f", &t2);

    printf("Введіть час, за який з'їдає пиріг третій гість\n");
    scanf("%f", &t3);

    // Обчислення загального часу з'їдання пирога гостями
    time = (t1 + t2 + t3) / 3;

    // Виведення результату в консоль з округленням до двох знаків після коми
    printf("Час за який гості з'їдять пиріг: %.2f годин\n", time);
    printf("\n\n Практичне завдання№1\n Виконав студент НУБІП групи ІПЗ-22009б \n Вітківський Максим Сергійович\n\n");

    return 0;
}
