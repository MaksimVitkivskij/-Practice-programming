#include <stdio.h>
#include <windows.h>

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    int r, i, j;
    long long dp[31][2] = {0};

    // Ввід кількості розрядів (р)
    printf("Введіть кількість розрядів (р): ");
    scanf("%d", &r);

    // Ініціалізація базових значень для розрядів 1
    dp[1][0] = dp[1][1] = 1;

    // Обчислення кількості чисел з вказаною кількістю розрядів
    for (i = 2; i <= r; i++) {
        // Кількість чисел без послідовності 11
        dp[i][0] = dp[i - 1][0] + dp[i - 1][1];
        // Кількість чисел з послідовністю 11
        dp[i][1] = dp[i - 1][0];
    }

    long long total = dp[r][0] + dp[r][1];  // Загальна кількість чисел з вказаною кількістю розрядів

    // Виведення результату в консоль
    printf("Кількість чисел із %d розрядів: %lld\n", r, total);
    printf("\n\n Практичне завдання №2\n Виконав студент НУБІП групи ІПЗ-22009б \n Вітківський Максим Сергійович\n\n");


    return 0;
}
