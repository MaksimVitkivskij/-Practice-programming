#include <stdio.h>
#include <windows.h>
#include <math.h>

// Функція для знаходження кількості точок перетину між двома колами
int findIntersectionPoints(double x1, double y1, double r1, double x2, double y2, double r2) {
    // Обчислюємо відстань між центрами коліс за допомогою формули відстані між двома точками у двовимірному просторі
    double distance = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));

    // Якщо центри коліс збігаються і радіуси однакові, кола ідентичні і мають безліч точок перетину
    if (distance == 0 && r1 == r2) {
        return -1; // Позначаємо цей випадок за допомогою значення -1
    }
    // Якщо відстань між центрами коліс більша за суму радіусів або менша за різницю радіусів, кола не перетинаються
    else if (distance > r1 + r2 || distance < fabs(r1 - r2)) {
        return 0; // Позначаємо цей випадок за допомогою значення 0
    }
    // Якщо відстань між центрами коліс дорівнює сумі або різниці радіусів, кола перетинаються у одній точці
    else if (distance == r1 + r2 || distance == fabs(r1 - r2)) {
        return 1; // Позначаємо цей випадок за допомогою значення 1
    }
    // Усі інші випадки, кола перетинаються в двох точках
    else {
        return 2; // Позначаємо цей випадок за допомогою значення 2
    }
}

int main() {
    // Налаштування кодування консолі для підтримки виводу кириллиці
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    // Змінні для збереження координат і радіусів двох коліс
    double x1, y1, r1, x2, y2, r2;

    // Введення координат і радіусів першого кола з клавіатури
    printf("Введіть координати та радіус першого кола (x1, y1, r1): ");
    scanf("%lf %lf %lf", &x1, &y1, &r1);

    // Введення координат і радіусів другого кола з клавіатури
    printf("Введіть координати та радіус другого кола (x2, y2, r2): ");
    scanf("%lf %lf %lf", &x2, &y2, &r2);

    // Виклик функції findIntersectionPoints для обчислення кількості точок перетину
    int intersectionPoints = findIntersectionPoints(x1, y1, r1, x2, y2, r2);

    // Виведення кількості точок перетину на екран
    printf("Кількість точок перетину: %d\n", intersectionPoints);
    printf("\n\n Практичне завдання №6\n Виконав студент НУБІП групи ІПЗ-22009б \n Вітківський Максим Сергійович\n\n");

    return 0;
}
